<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:fontFamily="sans-serif-light"
        android:textAlignment="textEnd"
        android:hint="0"
        android:background="#fff"
        android:textColor="#000"
        android:textSize="80sp" />
</ScrollView>

    <RelativeLayout
        android:id="@+id/Rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/result">

        <Button
            android:id="@+id/seven"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:fontFamily="sans-serif-light"
            android:layout_alignParentLeft="true"
            android:textColor="#FFFFFF"
            android:background="#2C3E50"
            android:textStyle="bold"
            android:text="7"
            android:textSize="40sp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:fontFamily="sans-serif-light"
            android:layout_toRightOf="@id/seven"
            android:textColor="#FFFFFF"
            android:background="#2C3E50"
            android:textStyle="bold"
            android:text="8"
            android:textSize="40sp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="100dp"
            android:fontFamily="sans-serif-light"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/eight"
            android:textColor="#FFFFFF"
            android:background="#2C3E50"
            android:textStyle="bold"
            android:text="9"
            android:textSize="40sp" />

        <Button
            android:id="@+id/div"
            android:layout_width="110dp"
            android:fontFamily="sans-serif-light"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/nine"
            android:text="/"
            android:textColor="#FFFFFF"
            android:background="#566573"
            android:textStyle="bold"
            android:textSize="40sp" />

        <Button
            android:id="@+id/four"
            android:layout_width="100dp"
            android:fontFamily="sans-serif-light"
            android:layout_height="100dp"
            android:layout_below="@id/seven"
            android:textColor="#FFFFFF"
            android:background="#2C3E50"
            android:textStyle="bold"
            android:text="4"
            android:textSize="40sp" />

        <Button
            android:id="@+id/five"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:fontFamily="sans-serif-light"
            android:layout_below="@id/eight"
            android:layout_toRightOf="@id/four"
            android:textColor="#FFFFFF"
            android:background="#2C3E50"
            android:textStyle="bold"
            android:text="5"
            android:textSize="40sp" />

        <Button
            android:id="@+id/six"
            android:fontFamily="sans-serif-light"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/nine"
            android:layout_toRightOf="@id/five"
            android:textColor="#FFFFFF"
            android:background="#2C3E50"
            android:textStyle="bold"
            android:text="6"
            android:textSize="40sp" />

        <Button
            android:id="@+id/mul"
            android:layout_width="110dp"
            android:fontFamily="sans-serif-light"
            android:layout_height="100dp"
            android:layout_below="@id/div"
            android:layout_toRightOf="@id/six"
            android:text="*"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#566573"
            android:textSize="40sp" />

        <Button
            android:id="@+id/one"
            android:layout_width="100dp"
            android:fontFamily="sans-serif-light"
            android:layout_height="100dp"
            android:layout_below="@id/four"
            android:textColor="#FFFFFF"
            android:background="#2C3E50"
            android:textStyle="bold"
            android:text="1"
            android:textSize="40sp" />

        <Button
            android:id="@+id/two"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/five"
            android:fontFamily="sans-serif-light"
            android:layout_toRightOf="@id/one"
            android:textColor="#FFFFFF"
            android:background="#2C3E50"
            android:textStyle="bold"
            android:text="2"
            android:textSize="40sp" />

        <Button
            android:id="@+id/three"
            android:layout_width="100dp"
            android:fontFamily="sans-serif-light"
            android:layout_height="100dp"
            android:layout_below="@id/six"
            android:layout_toRightOf="@id/two"
            android:textColor="#FFFFFF"
            android:background="#2C3E50"
            android:textStyle="bold"
            android:text="3"
            android:textSize="40sp" />

        <Button
            android:id="@+id/sub"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_below="@id/mul"
            android:fontFamily="sans-serif-light"
            android:layout_toRightOf="@id/three"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="#566573"
            android:textSize="40sp" />

        <Button
            android:id="@+id/clear"
            android:layout_width="100dp"
            android:fontFamily="sans-serif-light"
            android:layout_height="100dp"
            android:layout_below="@id/one"
            android:textColor="#FFFFFF"
            android:background="#2C3E50"
            android:textStyle="bold"
            android:text="C"
            android:textSize="40sp" />

        <Button
            android:id="@+id/zero"
            android:fontFamily="sans-serif-light"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/two"
            android:layout_toRightOf="@id/clear"
            android:textColor="#FFFFFF"
            android:background="#2C3E50"
            android:textStyle="bold"
            android:text="0"
            android:textSize="40sp" />

        <Button
            android:id="@+id/point"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/three"
            android:layout_toRightOf="@id/zero"
            android:text="."
            android:fontFamily="sans-serif-light"
            android:textColor="#FFFFFF"
            android:background="#2C3E50"
            android:textStyle="bold"
            android:textSize="40sp" />

        <Button
            android:id="@+id/add"
            android:layout_width="110dp"
            android:fontFamily="sans-serif-light"
            android:layout_height="100dp"
            android:layout_below="@id/sub"
            android:layout_toRightOf="@id/point"
            android:text="+"
            android:textColor="#FFFFFF"
            android:background="#566573"
        android:textStyle="bold"
            android:textSize="40sp" />


        <Button
            android:id="@+id/equals"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_orange_dark"
            android:onClick="click"
            android:layout_below="@id/add"
            android:text="="
            android:textColor="#ffffff"
            android:textSize="40sp" />

    </RelativeLayout>

    </LinearLayout>


